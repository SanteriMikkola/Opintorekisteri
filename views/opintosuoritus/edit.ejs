<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Edit Opintosuoritus</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card"> 
    	<div class="card-header">
			Edit Opintosuoritus
		</div>
        <div class="card-body">
            <form action="/opintosuoritus/update/<%= idArvionti %>" method="post">
                <div class="form-group">
                    <label>Päivämäärä:</label>
                    <input type="date" class="form-control" name="Paivamaara" value="<%= Paivamaara %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Arviointi:</label>
                    <input type="number" class="form-control" name="Arvosana" value="<%= Arvosana %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Opiskelijan id:</label>
                    <input type="number" class="form-control" name="idOpiskelija" value="<%= idOpiskelija %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Opintojakson id:</label>
                    <input type="number" class="form-control" name="idOpintojakso" value="<%= idOpintojakso %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>