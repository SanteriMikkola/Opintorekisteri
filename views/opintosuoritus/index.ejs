<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Opintosuoritukset</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Stencil+Text:wght@700&display=swap" rel="stylesheet">
    <style>
        td {
            text-align: center;
            height: 40px;
            border-left: 0.5px solid #ddd;
            border-right: 0.5px solid #ddd;
            border-bottom: 0.5px solid #ddd;
            opacity: 1;
            position: left;
            /*margin-right: auto;
            margin-left: auto;*/
            font-family: 'Righteous', cursive;
        }
        th{
            text-align: center;
            font-weight: bold;
            font-weight: 900;
            height: 40px;
            border-left: 0.5px solid #ddd;
            border-right: 0.5px solid #ddd;
            border-bottom: 0.5px solid #ddd;
            opacity: 1;
            position: left;
            /*margin-right: auto;
            margin-left: auto;*/
            font-family: 'Righteous', cursive;
        }
        tr:nth-child(even) {background-color: #9c9c9c;}
        .Delete {
            text-align: center;
            font-weight: bold;
            height: 40px;
            border: 2px solid red;
            background-color:rgb(255, 0, 98);
            border-radius: 12px;
            padding: 5px;
            opacity: 1;
            font-family: 'Righteous', cursive;
        }
        .table{
            border-top: 0.5px solid #ddd;
            position: left;
            width: 100%;
        }
        .arvosana{
            width: 10%;
        }	
        .etunimi{
            width: 10%;
        }	
        .addDiv {
            text-align: right;
            width: 98%;
        }
        .card-body {
            text-align: center;
            position: left;
            width: 100%;
        }
        .tableBackground {
            background-color:rgb(97, 93, 93);
            padding:20px;
            border: 2px solid rgb(97, 93, 93);
            border-radius: 12px;
            width: 100%;
            opacity: 0.9;
            position: left;
            /*margin-right: auto;
            margin-left: auto;*/
        }

        h1 {
            font-family: "Big Shoulders Stencil Text", cursive;
            position: left;
        }

        @keyframes example {
  0%   {background-image: url(reception-0.svg); /*margin-left: 0px; margin-right: auto;*/}
  25%  {background-image: url(reception-1.svg); /*margin-left: 0px; margin-right: auto;*/}
  50%  {background-image: url(reception-2.svg); /*margin-left: 0px; margin-right: auto;*/}
  75%  {background-image: url(reception-3.svg); /*margin-left: 0px; margin-right: auto;*/}
  100% {background-image: url(reception-4.svg); /*margin-left: 0px; margin-right: auto;*/}
}

        @media screen and (max-width: 1200px) {
        .th, .tr, .td, .add, .hr, .tableBackground, .table, .card-body, .addDiv, .body {
        width: 100%;
        margin-top: 0;
            }
        }
    </style>
</head>
<body class="container" style="margin-top: 50px; margin-right: auto; margin-left: auto;">

    <% if (messages.success) { %>
    <div role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div role="alert"><%- messages.error %></div>
    <% } %>

    <div> 
        <div>
            <nav>
                <h1> Opintosuoritukset</h1>
                <hr>
                <p> </p>
            </nav>
        </div>
    <div class="tableBackground"> 
        <div class="addDiv">
            <a class="add" href="/opintosuoritus/add">Add Opintosuoritus</a>
            <p> <br> </p>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Paivamaara</th>
                    <th class="arvosana" scope="col">Arvosana</th>
                    <th class="etunimi" scope="col">Etunimi</th>
                    <th scope="col">Nimi</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].Paivamaara%></td>
                    <td><%= data[i].Arvosana%></td>
                    <td><%= data[i].Etunimi%></td>
                    <td><%= data[i].Nimi%></td>
                    <td>
                        <a class="edit" href="../opintosuoritus/edit/<%=data[i].idArvionti%>">Edit</a>                       
                        <a class="Delete" onclick="return alert('Are You sure?')" href="../opintosuoritus/delete/<%=data[i].idArvionti%>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p>No opintosuoritus found!</p>
        <% } %>

        </div>
    </div>
